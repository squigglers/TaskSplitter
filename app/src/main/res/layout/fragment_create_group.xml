<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="@dimen/input_field_width"
        android:layout_height="wrap_content"
        android:id="@+id/create_group_name_field"
        android:hint="@string/groupname_hint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/input_field_top_margin"
        android:inputType="textPersonName"
        android:maxLength="@integer/max_length_groupname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_group"
        android:id="@+id/create_group_button"
        android:layout_below="@+id/create_group_name_field"
        android:layout_alignRight="@+id/create_group_name_field"
        android:layout_alignEnd="@+id/create_group_name_field" />
</RelativeLayout>