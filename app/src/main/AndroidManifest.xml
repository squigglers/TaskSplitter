<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="katherinechen.squigglers.com.tasksplitter" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateGroupActivity"
            android:label="@string/create_group"
            android:launchMode="singleInstance"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".JoinGroupActivity"
            android:label="@string/join_group"
            android:launchMode="singleInstance"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/sign_in"
            android:launchMode="singleInstance"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register"
            android:launchMode="singleInstance"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".CreateTaskActivity"
            android:label="@string/create_task"
            android:launchMode="singleInstance"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".StartPageActivity"
            android:label="@string/title_activity_start_page" >
        </activity>
        <activity
            android:name=".UserTasksActivity"
            android:label="@string/title_activity_user_tasks" >
        </activity>
        <activity
            android:name=".RightDrawerBaseActivity"
            android:label="@string/title_activity_right_drawer_base"
            android:parentActivityName=".LoggedInBaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="katherinechen.squigglers.com.tasksplitter.LoggedInBaseActivity" />
        </activity>
        <activity
            android:name=".GroupPageActivity"
            android:label="@string/title_activity_group_page" >
        </activity>
        <activity
            android:name=".ReassignActivity"
            android:label="@string/title_activity_reassign" >
        </activity>
    </application>

</manifest>
